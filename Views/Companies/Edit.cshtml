@model Applications.IntegranTI.com.Models.Companies
@using Applications.IntegranTI.com.Properties

@{
    ViewBag.Title = Resources.FormTitleEdit + " " + Resources.TitleCompany;
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Companies", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <h1>@Resources.TitleCompany</h1>
    <h2>@Resources.FormTitleEdit</h2>
    <hr />

    <div class="form-group row">
        <div class="col-md-2">
            <b>@Html.DisplayNameFor(model => model.Name)</b>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-2">
            <b>@Html.DisplayNameFor(model => model.FullName)</b>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    @Html.Hidden("ID_Company", Model.ID_Company)

    @Html.Partial("_BarSave")

}
